{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./src/**/*.spec.ts*"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "vite.config.mts",
    "node_modules/@types"
  ]
}
